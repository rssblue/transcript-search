{
	"name": "transcript-search",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "npm run tailwind-watch & vite dev",
		"build": "npm run tailwind-build && vite build",
		"preview": "vite preview",
		"lint": "prettier --plugin-search-dir . --check .",
		"format": "prettier --plugin-search-dir . --write .",
    "tailwind-watch": "npx tailwindcss -i ./src/css/tailwindcss.css -o ./static/dist/css/style.css --watch=always",
    "tailwind-build": "npx tailwindcss -i ./src/css/tailwindcss.css -o ./static/dist/css/style.css --minify"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-vercel": "^2.0.4",
		"@sveltejs/kit": "^1.5.0",
		"fast-xml-parser": "^3.20.3",
		"html-entities": "^2.3.2",
		"parse-srt": "^1.0.0-alpha",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"svelte": "^3.54.0",
		"svelte-tiny-virtual-list": "^1.1.6",
		"vite": "^4.0.0",
    "tailwindcss": "^3.3.5",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10"
	},
	"type": "module",
	"dependencies": {
		"crypto-browserify": "^3.12.0",
		"dotenv": "^16.0.3"
	}
}
